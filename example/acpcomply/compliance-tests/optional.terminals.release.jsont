{
  "title": "Agent releases terminal after use",
  "description": "Agent releases a managed terminal via terminal/release after it exits.",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/terminals#releasing-terminals"
  ],
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 27,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Run the command 'echo hello' in the terminal."
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 12000,
        "messages": [
          {
            "clientRequest": {
              "jsonrpc": "2.0",
              "method": "terminal/create",
              "params": {
                "sessionId": "^${sessionId}$"
              }
            }
          },
          {
            "clientRequest": {
              "jsonrpc": "2.0",
              "method": "terminal/wait_for_exit"
            }
          },
          {
            "clientRequest": {
              "jsonrpc": "2.0",
              "method": "terminal/release"
            }
          }
        ]
      }
    },
    {
      "expect": {
        "timeoutMs": 8000,
        "messages": [
          {
            "response": {
              "result": {
                "stopReason": ".+"
              }
            }
          }
        ]
      }
    }
  ]
}
