{
  "title": "Prompt includes an image content block",
  "description": "Agent accepts image content blocks in prompts when promptCapabilities.image is true.",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/content#image-content"
  ],
  "preconditions": [
    {
      "agentCap": "promptCapabilities.image",
      "mustBe": true
    }
  ],
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 29,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Describe this image."
            },
            {
              "type": "image",
              "mimeType": "image/png",
              "data": "iVBORw0KGgoAAAANSUhEUgAAAAEAAAAB"
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 10000,
        "messages": [
          {
            "response": {
              "result": {
                "stopReason": ".+"
              }
            }
          }
        ]
      }
    }
  ]
}
