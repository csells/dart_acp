{
  "title": "Respond to permission request with selected option",
  "description": "Agent requests permission; client replies with an allow option; agent proceeds.",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/tool-calls#requesting-permission",
    "https://agentclientprotocol.com/protocol/schema#requestpermissionrequest"
  ],
  "init": {
    "permissionPolicy": "write"
  },
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 20,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Perform a filesystem write that requires permission if your policy requires it."
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 12000,
        "messages": [
          {
            "clientRequest": {
              "jsonrpc": "2.0",
              "method": "session/request_permission",
              "params": {
                "sessionId": "^${sessionId}$"
              }
          }
          }
        ]
      }
    },
    {
      "expect": {
        "timeoutMs": 10000,
        "messages": [
          {
            "response": {
              
              "result": {
                "stopReason": ".+"
              }
            }
          }
        ]
      }
    }
  ]
}
