{
  "title": "Agent reports failed tool call when client errors",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/tool-calls#updating"
  ],
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 32,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Attempt an operation that will fail (e.g., read a non-existent file)."
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 12000,
        "messages": [
          {
            "notification": {
              "jsonrpc": "2.0",
              "method": "session/update",
              "params": {
                "update": {
                  "sessionUpdate": "^tool_call_update$",
                  "status": "^failed$"
                }
              }
            }
          }
        ]
      }
    },
    {
      "expect": {
        "timeoutMs": 8000,
        "messages": [
          {
            "response": {
              "id": 32,
              "result": {
                "stopReason": ".+"
              }
            }
          }
        ]
      }
    }
  ]
}
