{
  "title": "Invalid params should return -32602",
  "description": "Schema-violating or malformed parameters must return JSON-RPC error code -32602 (Invalid Params).",
  "severity": "required",
  "docs": [
    "https://www.jsonrpc.org/specification#error_object"
  ],
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 28,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": {
            "oops": true
          }
        },
        "expectError": true
      }
    },
    {
      "expect": {
        "timeoutMs": 2000,
        "messages": [
          {
            "response": {
              "error": {
                "code": "^-32602$"
              }
            }
          }
        ]
      }
    }
  ]
}
