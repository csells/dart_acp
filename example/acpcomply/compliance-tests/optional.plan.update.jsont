{
  "title": "Agent sends plan updates",
  "description": "Agent emits a plan via session/update while processing a prompt.",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/agent-plan"
  ],
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 15,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Draft a plan to improve this project."
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 10000,
        "messages": [
          {
            "notification": {
              "jsonrpc": "2.0",
              "method": "session/update",
              "params": {
                "update": {
                  "sessionUpdate": "^plan$"
                }
              }
            }
          }
        ]
      }
    },
    {
      "expect": {
        "timeoutMs": 10000,
        "messages": [
          {
            "response": {
              
              "result": {
                "stopReason": ".+"
              }
            }
          }
        ]
      }
    }
  ]
}
