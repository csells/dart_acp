{
  "title": "Prompt includes embedded resource (resource)",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/content#embedded-resource"
  ],
  "preconditions": [
    {
      "agentCap": "promptCapabilities.embeddedContext",
      "mustBe": true
    }
  ],
  "sandbox": {
    "files": [
      {
        "path": "script.py",
        "text": "print('hello')"
      }
    ]
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 14,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Here's the file content."
            },
            {
              "type": "resource",
              "resource": {
                "uri": "file://${sandbox}/script.py",
                "mimeType": "text/x-python",
                "text": "print('hello')"
              }
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 10000,
        "messages": [
          {
            "response": {
              "id": 14,
              "result": {
                "stopReason": ".+"
              }
            }
          }
        ]
      }
    }
  ]
}
