{
  "title": "Agent must use absolute paths in fs requests",
  "severity": "required",
  "docs": [
    "https://agentclientprotocol.com/protocol/overview#argument-requirements"
  ],
  "sandbox": {
    "files": [
      {
        "path": "abscheck.txt",
        "text": "x"
      }
    ]
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 26,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Read abscheck.txt; ensure you use absolute paths."
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 8000,
        "messages": [
          {
            "clientRequest": {
              "jsonrpc": "2.0",
              "method": "fs/read_text_file",
              "params": {
                "path": "^(?:/|[A-Za-z]:\\\\).+abscheck.txt$"
              }
            }
          }
        ]
      }
    }
  ]
}
