{
  "title": "Agent writes a file via fs/write_text_file",
  "description": "Ensure the agent writes a file via fs/write_text_file within the sandbox workspace.",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/file-system#writing-files",
    "https://agentclientprotocol.com/protocol/schema#writetextfilerequest"
  ],
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 11,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Create a file named output.txt with text 'done'."
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 6000,
        "messages": [
          {
            "clientRequest": {
              "jsonrpc": "2.0",
              "method": "fs/write_text_file",
              "params": {
                "path": ".*output.txt$",
                "content": ".*done.*"
              }
            },
            "reply": {
              "result": {}
            }
          }
        ]
      }
    }
  ]
}
