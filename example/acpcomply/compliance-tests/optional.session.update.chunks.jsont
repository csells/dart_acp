{
  "title": "Observe agent and user/thought chunks",
  "description": "Agent streams message chunks (agent, user, thought) via session/update during the prompt.",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/prompt-turn#3-agent-reports-output"
  ],
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 22,
        "method": "session/prompt",
        "params": {
          "sessionId": "${sessionId}",
          "prompt": [
            {
              "type": "text",
              "text": "Respond in multiple steps."
            }
          ]
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 10000,
        "messages": [
          {
            "notification": {
              "jsonrpc": "2.0",
              "method": "session/update",
              "params": {
                "update": {
                  "sessionUpdate": "^(agent_message_chunk|user_message_chunk|agent_thought_chunk)$"
                }
              }
            }
          }
        ]
      }
    },
    {
      "expect": {
        "timeoutMs": 10000,
        "messages": [
          {
            "response": {
              "result": {
                "stopReason": ".+"
              }
            }
          }
        ]
      }
    }
  ]
}
