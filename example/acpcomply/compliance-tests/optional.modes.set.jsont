{
  "title": "Set session mode and observe current_mode_update",
  "description": "Client switches the session mode via session/set_mode and the agent emits a current_mode_update notification.",
  "severity": "optional",
  "docs": [
    "https://agentclientprotocol.com/protocol/session-modes",
    "https://agentclientprotocol.com/protocol/schema#setsessionmoderequest"
  ],
  "sandbox": {
    "files": []
  },
  "steps": [
    {
      "newSession": {
        "capture": "sessionId"
      }
    },
    {
      "send": {
        "jsonrpc": "2.0",
        "id": 16,
        "method": "session/set_mode",
        "params": {
          "sessionId": "${sessionId}",
          "modeId": "code"
        }
      }
    },
    {
      "expect": {
        "timeoutMs": 4000,
        "messages": [
          {
            "response": {
              
              "result": {}
            }
          }
        ]
      }
    },
    {
      "expect": {
        "timeoutMs": 8000,
        "messages": [
          {
            "notification": {
              "jsonrpc": "2.0",
              "method": "session/update",
              "params": {
                "update": {
                  "sessionUpdate": "^current_mode_update$",
                  "currentModeId": ".+"
                }
              }
            }
          }
        ]
      }
    }
  ]
}
